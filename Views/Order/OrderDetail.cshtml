@using Project_MVC.Models
@{
    ViewBag.Title = "OrderDetail";
    var details = ViewBag.Detail as List<OrderDetail>;
    double sum = 0;
    var ship = 50000;
}



<div style="margin-top:9rem" class="card mb-50">
    <div class="gap">
        <div class="col-2 d-flex mx-auto p-0"><img class="m-auto" width="60" height="60" src="https://icon-library.com/images/avatar-icon-png/avatar-icon-png-26.jpg"></div>
    </div>
    <div class="title mx-auto" style="color:blueviolet"> Cảm ơn bạn đã đặt hàng! </div>
    <div class="main">
        <span id="sub-title">
            <b style="color:darkblue">Chi tiết đơn hàng:</b>
        </span>
        @foreach (var i in details)
        {
            sum += Convert.ToDouble(i.UnitPrice * i.Quantity);
            <div class="row row-main">
                    <div class="col-3"> <img class="img-fluid" src="~/Resources/Image/@i.Product.Images"> </div>
                    <div class="col-6">
                        <div class="row d-flex">
                            <p><b>@i.Product.Names</b></p>
                        </div>
                        <div class="row d-flex">
                            <p style="color:black"> Số lượng: @i.Quantity</p>
                        </div>
                    </div>
                <div class="col-3 d-flex justify-content-end">
                    <p><b>Giá: @String.Format("{0:0,##}", i.UnitPrice * i.Quantity) VND</b></p>
                </div>
            </div>
        }
        <hr>
        <div class="total">

            <div class="row">
                <div class="col"> <b> Ship:</b> </div>
                <div class="col d-flex justify-content-end"> <b>@String.Format("{0:0,##}", ship) VND</b> </div>
            </div>
            <hr />
            <div class="row">
                <div class="col"> <b> Tổng:</b> </div>
                <div class="col d-flex justify-content-end"> <b>@String.Format("{0:0,##}", sum + ship) VND</b> </div>
            </div>
            <a href="/Order/ViewOrder" class="btn d-flex mx-auto"> Theo dõi đơn hàng </a>
        </div>
    </div>
</div>

<style>

    .card {
        margin: auto;
        width: 42rem;
        max-width: 80rem;
        border-radius: 20px
    }

    .mt-50 {
        margin-top: 50px;
    }

    .mb-50 {
        margin-bottom: 50px;
    }

    @@media(max-width:767px) {
        .card {
            width: 80%
        }
    }

    @@media(height:1366px) {
        .card {
            width: 75%
        }
    }

    #orderno {
        padding: 1vh 2vh 0;
        font-size: smaller
    }

    .gap .col-2 {
        margin-top: -2rem;
        border-radius: 1.2rem
    }

    .title {
        display: flex;
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        padding: 12%
    }

    .main {
        padding: 0 2rem
    }

        .main img {
            border-radius: 7px
        }

        .main p {
            margin-bottom: 0;
            font-size: 0.75rem
        }

    #sub-title p {
        margin: 1vh 0 2vh 0;
        font-size: 1rem
    }

    .row-main {
        padding: 1.5vh 0;
        align-items: center
    }

    hr {
        margin: 1rem -1vh;
        border-top: 1px solid rgb(214, 214, 214)
    }

    .total {
        font-size: 1rem
    }

    @@media(height: 1366px) {
        .main p {
            margin-bottom: 0;
            font-size: 1.2rem
        }

        .total {
            font-size: 1.5rem
        }
    }

    .btn {
        background-color: rgb(3, 122, 219);
        border-color: rgb(3, 122, 219);
        color: white;
        margin: 7vh 0;
        border-radius: 7px;
