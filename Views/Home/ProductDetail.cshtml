                        </a>
                        <a href="">
                            <span class="badge red mr-1">Bestseller</span>
                        </a>
                    </div>
                    <a href="">
                        <div class="row">
                            <div class="col">
                                <div class="collapse multi-collapse" id="multiCollapseExample1">
                                    @foreach (var c in cate)
                                    {
                                        <div class="card card-body">
                                            @c.Category1
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </a>
                    <p class="lead">
                        <span class="mr-1">
                            <del>@String.Format("{0:0,##}", Model.Prices) VND</del>
                        </span>
                        <b>@String.Format("{0:0,##}", Model.Prices) VND</b>
                    </p>

                    <div>
                        <h5 style="font-weight: 500; color: blueviolet">Size:</h5>
                        <div class="value">
                            <div>
                                <button data-toggle="tooltip" title="S" class="btn btn-md font-weight-bold" >S</button>
                                <button data-toggle="tooltip" title="M" class="btn btn-md font-weight-bold">M</button>
                                <button data-toggle="tooltip" title="L" class="btn btn-md font-weight-bold" >L</button>
                            </div>
                            <a class="reset_variations" href="#" style="visibility: hidden;">Xóa</a>
                        </div>
                    </div>

                    <form class="d-flex justify-content-left">
                        <a href="/Cart/AddToCart/@Model.Id" class="btn btn-primary btn-md my-0 " id="addtocart">
                            Thêm vào giỏ hàng
                            <i class="fas fa-shopping-cart ml-1"></i>
                        </a>
                        <a href="/Cart/" class="btn btn-primary btn-md my-0 ">
                            Đến giỏ hàng
                            <i class="fa-solid fa-right-long"></i>
                        </a>
                    </form>

                    <br />

                    <p style="color:blueviolet" class="lead font-weight-bold">Mô tả</p>

                    <b>
                        @Model.Descriptions
                    </b>

                </div>
                <!--Content-->

            </div>
            <!--Grid column-->

        </div>
        <!--Grid row-->

        <hr>

        <!--Grid row-->
        <div class="row d-flex justify-content-center wow fadeIn">

            <!--Grid column-->
