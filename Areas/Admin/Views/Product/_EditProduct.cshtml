@model Project_MVC.Models.Product
@using Project_MVC.Models



@Html.AntiForgeryToken()
<div class="modal-body">
    <div class="form-group">
        @Html.TextBoxFor(m => m.Id, new { type = "hidden", @class = "form-control", id = "ProductId" })
    </div>
    <div class="form-group">
        <label style="color: black">Tên</label>
        @Html.TextBoxFor(m => m.Names, new { id = "ProductName", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Names, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div style="color: black">Ảnh</div>
        @Html.TextBoxFor(m => m.ImageName, new { type = "file" })
    </div>
    <div class="form-group">
        <label style="color: black">Ngày đăng</label>
        @Html.TextBoxFor(m => m.ProductDate, new { @class = "form-control", type = "date", id = "ProductDate" })
        @Html.ValidationMessageFor(m => m.ProductDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label style="color: black">Giá</label>
        @Html.TextBoxFor(m => m.Prices, new { id = "ProductPrice", @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Prices, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.CategoryName, new SelectList(Category.getListCate()), "Chọn danh mục", new { @class = "form-control", id = "ProductCate" })
        @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label style="color: black">Mô tả</label>
        @Html.TextAreaFor(m => m.Descriptions, new { @class = "form-control", id = "ProductDes" })
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-6">
                <label style="color: black">Còn hàng</label>
                @Html.RadioButtonFor(m => m.Available, true, new { style = "margin-right: 10px", @checked = "true", id = "avl" })
            </div>
            <div class="col-6">
                <label style="color: black">Hết hàng</label>
                @Html.RadioButtonFor(m => m.Available, false, new {id = "unAvl"})
            </div>
        </div>
    </div>
</div>