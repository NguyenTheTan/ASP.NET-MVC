@model Project_MVC.Models.Product
@using Project_MVC.Models


@Html.AntiForgeryToken()
<div class="modal-body">
    <div class="form-group">
        <label style="color: black">Tên sản phẩm</label>
        @Html.TextBoxFor(m => m.Names, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Names, null, new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div style="color:black">Ảnh</div>
        @Html.TextBoxFor(m => m.ImageName, new { type = "file", required = "title", title = "Yêu cầu bắt buộc"})
        <div>
            @Html.ValidationMessageFor(m => m.ImageName, "", new { @class = "text-danger" })
            @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        <label style="color: black">Ngày đăng</label>
        @Html.TextBoxFor(m => m.ProductDate, new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.ProductDate, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label style="color: black">Giá</label>
        @Html.TextBoxFor(m => m.Prices, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Prices, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.CategoryName, new SelectList(Category.getListCate()), "Chọn danh mục", new { @class = "form-control", autofocus = "autofocus" })
        @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label style="color: black">Mô tả</label>
        @Html.TextAreaFor(m => m.Descriptions, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-6">
                <label style="color: black">Còn hàng</label>
                @Html.RadioButtonFor(m => m.Available, true, new { @style = "margin-right: 10px", @checked = "true" })
            </div>
            <div class="col-6">
                <label style="color: black">Hết hàng</label>
                @Html.RadioButtonFor(m => m.Available, false)
            </div>
        </div>
    </div>
</div>
